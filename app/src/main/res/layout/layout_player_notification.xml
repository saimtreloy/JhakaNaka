<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/ic_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Of The Century"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Green Day 21st Century"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPlayerNotificationReqind"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_player_rewind"/>
                <ImageView
                    android:id="@+id/imgPlayerNotificationPlay"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_player_play"/>
                <ImageView
                    android:id="@+id/imgPlayerNotificationForward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_player_forward"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>